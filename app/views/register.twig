{% set title = 'Register' %}

{% extends './templates/nosidebar.twig' %}

{% block main %}
    <h2 class="title">Register</h2>
    <form class="form" action="/auth/register" method="post">
        <div class="input">
          <span class="input__icon">
            <i class="fas fa-user"></i>
          </span>
          <input placeholder="Username" class="input__input" type="text" name="username" value="">
        </div>

        <div class="input">
          <span class="input__icon">
            <i class="fas fa-envelope"></i>
          </span>
          <input placeholder="Email" class="input__input" type="text" name="email" value="">
        </div>

        <div class="input">
          <span class="input__icon">
            <i class="fas fa-lock"></i>
          </span>
          <input placeholder="Password" class="input__input" type="text" name="password" value="">
        </div>

        <div class="input">
          <span class="input__icon">
            <i class="fas fa-lock"></i>
          </span>
          <input placeholder="Confirm Password" class="input__input" type="text" name="confirm_password" value="">
        </div>

        <div class="checkbox">
          <input type="checkbox" name="agreed" value="">
          <p>I agree to the <a href="/privacy-policy">terms and conditions</a> of this application.</p>
        </div>
        <button class="button" type="submit">Register</button>
    </form>
{% endblock %}
